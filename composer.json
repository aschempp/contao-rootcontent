{
    "name": "terminal42/contao-rootcontent",
    "type": "contao-bundle",
    "description": "Allows creating root-page aware content in Contao",
    "license": "MIT",
    "authors": [
        {
            "name": "terminal42 gmbh",
            "homepage": "https://www.terminal42.ch"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/terminal42"
        },
        {
            "type": "other",
            "url": "https://ko-fi.com/terminal42"
        }
    ],
    "support": {
        "issues": "https://github.com/terminal42/contao-rootcontent/issues",
        "forum": "https://community.contao.org",
        "source": "https://github.com/terminal42/contao-rootcontent"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "contao/core-bundle": "~4.9.10 || ^4.10.5",
        "composer/semver": "^3.2",
        "composer-runtime-api": "^2"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "contao/easy-coding-standard": "^3.0"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Terminal42\\RootcontentBundle\\": "src"
        }
    },
    "extra": {
        "contao-manager-plugin": "Terminal42\\RootcontentBundle\\ContaoManager\\Plugin"
    },
    "scripts": {
        "cs-fixer": [
            "vendor/bin/ecs check src/ --fix --ansi"
        ]
    }
}
